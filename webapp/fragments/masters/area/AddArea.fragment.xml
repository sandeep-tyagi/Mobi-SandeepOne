<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Add Area" beforeClose="Close" contentWidth="30%">
		<content>
			<VBox>
				<f:Form editable="true">
					<f:layout>
						<f:ResponsiveGridLayout/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Country">
									<f:fields>
										<ComboBox placeholder="Select Country" id="cboxCountry_AreaMaster1" items="{oModelCountryFragment>/results}"
											selectionChange="onChangeCountry" required="true">
											<core:Item key="{oModelCountryFragment>CountryCode}" text="{oModelCountryFragment>CountryName}"/>
										</ComboBox>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="State">
									<f:fields>
										<ComboBox placeholder="Select State" id="cboxState_AreaMaster" items="{oModelState>/results}" required="true" selectionChange="onPressSearchDistrict">
											<core:Item key="{oModelState>StateCode}" text="{oModelState>StateName}"/>
										</ComboBox>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="District">
									<f:fields>
										<ComboBox placeholder="Select District" id="cboxDistrict1_AreaMaster" items="{oModelDistrictFragment>/results}" required="true">
											<core:Item key="{oModelDistrictFragment>DistrictCode}" text="{oModelDistrictFragment>DistrictName}"/>
										</ComboBox>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Area Code">
									<f:fields>
										<Input id="AreaCode_AreaMaster" placeholder="Enter Area Code" required="true"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Area Desc">
									<f:fields>
										<Input id="AreaDesc_AreaMaster" placeholder="Enter Area Desc" required="true"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" type="Accept" icon="sap-icon://accept" press="onPressSubmit_Area"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" icon="sap-icon://decline" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>