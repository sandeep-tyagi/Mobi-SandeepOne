<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Edit Details" beforeClose="Close" contentWidth="30%">
		<content>
			<VBox>
				<f:Form  editable="true">
						<f:layout>
							<f:ResponsiveGridLayout/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
									<f:formElements>
								<f:FormElement label="Area Code">
									<f:fields>
										<Input id="areaCodeAreaMasterEdit" value="{ModelAreaEdit>/AREACODE}" placeholder="Enter Area Code" 
										 editable="false"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Description ">
									<f:fields>
										<Input id="descNameAreaMasterEdit" value="{ModelAreaEdit>/AREADISCRIPTTION}" placeholder="Enter Area Discription" 
										required="true"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="District">
									<f:fields>
										<Input id="districtMasterEdit" value="{ModelAreaEdit>/DISTRICTCODE}" placeholder="Enter District Code" 
										 editable="false"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Status">
										<f:fields>
									<ComboBox placeholder="Select Status "  value="{ModelAreaEdit>/SOFT_DEL}" id="CountryCboxStatus" items="{AreaFragment>/items}" selectionChange="onChangeStatus" required="true">
						    		 <core:Item key="{AreaFragment>key}" text="{AreaFragment>text}"/>
						    			</ComboBox>
										</f:fields>
										</f:FormElement>
							</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" type="Accept" icon="sap-icon://accept" press="onDialogSaveButtonAreaEdit"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" icon="sap-icon://decline" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>