<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Add District" beforeClose="Close" contentWidth="30%">
		<content>
			<VBox>
				<f:Form  editable="true">
						<f:layout>
							<f:ResponsiveGridLayout/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement label="Country Code">
										<f:fields>
											<Input id="countryCodeEdit" value="{oModelEditCountryMaster>/CountryCode}" placeholder="Enter Country Code" 
											editable="false"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Country Name">
										<f:fields>
											<Input id="countryNameEdit" value="{oModelEditCountryMaster>/CountryName}" placeholder="Enter Country Name" required="true"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Status">
										<f:fields>
									<ComboBox placeholder="Select Status "  value="{oModelEditCountryMaster>/SOFT_DEL}" id="CountryCboxStatus" items="{CountryFragment>/items}" selectionChange="onChangeStatus" required="true">
						    		 <core:Item key="{CountryFragment>key}" text="{CountryFragment>text}"/>
						    			</ComboBox>
										</f:fields>
										</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" type="Accept" icon="sap-icon://accept" press="onPressSubmitCountryMasterEdit"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" icon="sap-icon://decline" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>