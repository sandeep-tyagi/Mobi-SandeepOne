<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Edit Details" beforeClose="Close" contentWidth="30%">
		<content>
			<VBox>
				<f:Form  editable="true">
						<f:layout>
							<f:ResponsiveGridLayout/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
									<f:formElements>
								<f:FormElement label="Zone Code">
									<f:fields>
										<Input id="zoneCodeZoneMasterEdit" value="{ModelZoneEdit>/ZoneCode}" placeholder="Enter Zone Code " 
										 editable="false"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Zone Name ">
									<f:fields>
										<Input id="zoneNameZoneMasterEdit" value="{ModelZoneEdit>/ZoneName}" placeholder="Enter Zone Name" 
										required="true"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Area Code">
									<f:fields>
										<Input id="areaZoneMasterEdit" value="{ModelZoneEdit>/AreaCode}" placeholder="Enter Area Code" 
										 editable="false"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Status">
										<f:fields>
									<ComboBox placeholder="Select Status "  value="{ModelZoneEdit>/SOFT_DEL}" id="CountryCboxStatus" items="{ZoneFragment>/items}" selectionChange="onChangeStatus" required="true">
						    		 <core:Item key="{ZoneFragment>key}" text="{ZoneFragment>text}"/>
						    			</ComboBox>
										</f:fields>
										</f:FormElement>
							</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" type="Accept" icon="sap-icon://accept" press="onDialogSaveButtonZoneEdit"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" icon="sap-icon://decline" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>