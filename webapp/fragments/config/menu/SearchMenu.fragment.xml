<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Search Customer Type" beforeClose="Close" contentWidth="30%">
		<content>
			<VBox>
				<f:Form editable="true">
					<f:layout>
						<f:ResponsiveGridLayout/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Menu Name">
									<f:fields>
										<ComboBox placeholder="Select Menu Name" id="cboxMenuName" items="{oModelMenu>/results}" selectionChange="onChangeMenuName" required="true">
											<core:Item key="{oModelMenu>MENU_ID}" text="{oModelMenu>MENU_NAME}"/>
										</ComboBox>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</content>
		<beginButton>
			<Button text="Search" type="Accept" icon="sap-icon://accept" press="onPressSearchMenuName"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" icon="sap-icon://decline" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>