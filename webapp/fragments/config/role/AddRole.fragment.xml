<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Add Role" beforeClose="Close" contentWidth="30%">
		<content>
			<VBox>
				<f:Form editable="true">
					<f:layout>
						<f:ResponsiveGridLayout/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Role Name">
									<f:fields>
										<!--<Input id="roleAddRole" placeholder="Enter Role Name" required="true"/>-->
											<MaskInput id="roleAddRole" mask="CCCCCCCCCCCCCCCCCCCCCCCCC" placeholderSymbol=" " placeholder="Enter Role Name">
											<rules>
												<MaskInputRule maskFormatSymbol="C" regex="[a-zA-Z ]"/>
											</rules>
										</MaskInput>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" type="Accept" icon="sap-icon://accept" press="onPressSubmitRole"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Reject" icon="sap-icon://decline" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>