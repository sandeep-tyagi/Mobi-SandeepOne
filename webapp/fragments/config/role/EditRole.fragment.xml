<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Edit Details" beforeClose="BClose_Role_Edit" contentWidth="45%" afterClose="AClose_Role_Edit">
		<content>
			<VBox class="sapUiSmallMargin">
				<items>
					<f:Form editable="true">
						<f:layout>
							<f:ResponsiveGridLayout/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement >
										<f:fields>
											<Label text="Role Id" visible="false"></Label>
											<Input id="roleIdRoleEdit" value="{ModelRoleEdit>/ROLEID}" visible="false"></Input>
										</f:fields>
									</f:FormElement>
									<f:FormElement >
										<f:fields>
											<Label text="Role Name"></Label>
											<Input id="roleNameRoleEdit" value="{ModelRoleEdit>/ROLENAME}"></Input>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Status">
										<f:fields>
											<ComboBox placeholder="Select Status " value="{ModelRoleEdit>/SOFTDEL}" id="roleCboxStatus" items="{RoleModelFragment>/items}"
												selectionChange="onChangeStatus" required="true">
												<core:Item key="{RoleModelFragment>key}" text="{RoleModelFragment>text}"/>
											</ComboBox>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</items>
			</VBox>
		</content>
		<beginButton>
		
			<Button text="Save" type="Accept" icon="sap-icon://accept" press="onDialogSaveButton_Role_Edit"/>
		</beginButton>
		<endButton>
		<Button text="Cancel" type="Reject" icon="sap-icon://sys-cancel" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>