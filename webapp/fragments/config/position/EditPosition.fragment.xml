<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Edit Details" beforeClose="BClose_Position_Edit" contentWidth="45%" afterClose="AClose_Position_Edit">
		<content>
			<VBox class="sapUiSmallMargin">
				<items>
					<f:Form editable="true">
						<f:layout>
							<f:ResponsiveGridLayout/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement >
										<f:fields>
											<Label text="Position Id" visible="false"></Label>
											<Input id="positionIdPositionEdit" value="{oModelEditPosition>/POSITION_ID}" visible="false"></Input>
										</f:fields>
									</f:FormElement>
									<f:FormElement >
										<f:fields>
											<Label text="Position Name"></Label>
											<Input id="positionNamePositionEdit" value="{oModelEditPosition>/POSITION_NAME}"></Input>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Status">
										<f:fields>
											<ComboBox placeholder="Select Status " value="{oModelEditPosition>/SOFT_DEL}" id="positionCboxStatus" items="{PositionModelFragment>/items}"
												selectionChange="onChangeStatus" required="true">
												<core:Item key="{PositionModelFragment>key}" text="{PositionModelFragment>text}"/>
											</ComboBox>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</items>
			</VBox>
		</content>
		<beginButton>
		<Button text="Save" type="Accept" icon="sap-icon://accept" press="onDialogSaveButtonPositionEdit"/>
		</beginButton>
		<endButton>
		<Button text="Cancel" type="Reject" icon="sap-icon://sys-cancel" press="onDialogCancelButtonPositionEdit"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>