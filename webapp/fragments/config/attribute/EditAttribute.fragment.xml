<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Edit Details" beforeClose="BClose_Attribute_Edit" contentWidth="45%" afterClose="AClose_Attribute_Edit">
		<content>
			<VBox>
				<f:SimpleForm  editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="true" labelSpanL="2"
					labelSpanM="3">
					<f:content>
						<Label text="Attribute Id" visible="false"></Label>
						<Input id="attributeIdAttributeEdit" value="{oModelEdit_Attribute>/ATTRIBUTE_ID}" visible="false"></Input>
						<Label text="Attribute Name"></Label>
						<Input id="attrubuteNameAttributeEdit" value="{oModelEdit_Attribute>/ATTRIBUTE_NAME}"></Input>
						<Label text="Display"></Label>
						<ComboBox placeholder="Display" value="{oModelEdit_Attribute>/DISPLAY}" id="attrubuteDisplayAttributeEdit"
							items="{AttriModelFragment>/items}" selectionChange="onChange_Attribute_Edit" required="true">
							<core:Item key="{AttriModelFragment>key}" text="{AttriModelFragment>text}"/>
						</ComboBox>
						<Label text="Status"></Label>
						<ComboBox placeholder="Select Status" id="cboxStatusEditAttribute" value="{oModelEdit_Attribute>/SOFT_DEL}" items="{AttributeModelFragment>/items}"
						selectionChange="onChangeStatusEditAttribute" required="true">
							<core:Item key="{AttributeModelFragment>key}" text="{AttributeModelFragment>text}"/>
						</ComboBox>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<beginButton>
			<Button text="Save" type="Accept" icon="sap-icon://accept" press="onDialogSaveButtonEditAttribute"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" type="Reject" icon="sap-icon://sys-cancel" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>