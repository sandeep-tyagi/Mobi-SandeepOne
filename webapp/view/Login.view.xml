<mvc:View controllerName="MOBI.controller.Login" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<App id="app">
		<pages>
			<Page>
				<customHeader>
					<Bar>
						<contentLeft>
							<Image src="./image/logo.png" width="90px"/>
						</contentLeft>
						<contentMiddle>
							<Text text=""></Text>
						</contentMiddle>
					</Bar>
				</customHeader>
				<content>
					<VBox height="25%"></VBox>
					<VBox class="sapUiSmallMargin login">
						<f:SimpleForm minWidth="100%" maxContainerCols="3" editable="true" layout="ResponsiveLayout">
							<f:content>
								<Label text=""></Label>
								<Input id="i_username" type="Text" visible="true" width="50%" placeholder="Username" editable="true"></Input>
								<Label text=""></Label>
								<Input id="i_password" type="Password" visible="true" width="50%" placeholder="Password" editable="true"></Input>
								<Label text=""></Label>
								<Button id="btn_login" text="Login" type="Default" width="50%" enabled="true" press="onLoginPress"></Button>
							</f:content>
						</f:SimpleForm>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>